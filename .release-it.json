{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "github": {
    "release": true
  },
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": [
      "git pull",
      "npm run format",
      "npm run lint",
      "npm run test"
    ],
    "after:bump": "npx auto-changelog -p"
  }
}
